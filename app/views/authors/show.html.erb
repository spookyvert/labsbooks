<h1><%= @author.name %> (b. <%= @author.birth_year %>)</h1>

<p> Books: </p>
<ul>
  <% @author.books.each do |book| %>
  <li><%=link_to book.title, book_path(book) %></li>
   <% end%>
</ul>
 

<%= link_to "Edit " + @author.name, edit_author_url(@author) %><br>


<button type="button"><%= link_to "Delete " + @author.name, @author, method: :delete, data: { confirm: 'Are you sure?' }, :id => "button1"%></button>
